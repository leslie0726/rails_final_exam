<h2>登入</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label:"電子信箱" %>
    <%= f.input :password, required: false, label:"密碼" %>
    <%= f.input :remember_me, label:"記住我(請勿在公用電腦勾選此選項)", as: :boolean if devise_mapping.rememberable?  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "登入" %>
  </div>
<% end %>

<%= render "devise/shared/links"  %>
